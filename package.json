{
  "name": "electron-blank-window",
  "version": "1.0.1",
  "description": "Starter pack: a blank Electron window ready for your HTML/CSS/JS, with robust dev/prod path handling and quick packaging.",
  "main": "src/main.js",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "setup": "npm i -D electron@latest electron-builder@latest",
    "build-css": "tailwindcss -i src/renderer/styles.css -o src/renderer/styles.css --watch",
    "dev": "npm run build-css & electron .",
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "asar": true,
    "appId": "com.example.blankwindow",
    "productName": "Blank Window",
    "files": [
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "marked": "^16.3.0"
  }
}
